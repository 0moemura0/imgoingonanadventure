<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/gradient_background"
    android:orientation="vertical"
    tools:context="com.imgoingonanadventure.ui.tracker.TrackerFragment">

    <ImageView
        android:id="@+id/imageBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.2"
        android:importantForAccessibility="no"
        android:scaleType="centerCrop"
        android:src="@drawable/bag_end_to_rivendell"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_character"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.6" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_grass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.85" />

    <ImageView
        android:id="@+id/viewGrass"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/grass"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline_grass" />

    <ImageView
        android:id="@+id/imageviewCharacter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/person"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline_character" />

    <ImageView
        android:id="@+id/top_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0.6"
        android:scaleType="fitXY"
        android:src="@drawable/top_line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewToSettings" />

    <ImageView
        android:id="@+id/bottom_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0.6"
        android:scaleType="fitXY"
        android:src="@drawable/bottom_line"
        app:layout_constraintBottom_toTopOf="@id/guideline_character"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/viewToSettings"
        android:layout_width="52dp"
        android:layout_height="65dp"
        android:layout_margin="20dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/palanir"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/notes_text"
        style="@style/TextAppearance.ImGoingOnAnAdventure.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="notes"
        app:layout_constraintEnd_toEndOf="@id/viewToNotes"
        app:layout_constraintStart_toStartOf="@id/viewToNotes"
        app:layout_constraintTop_toBottomOf="@id/viewToNotes" />

    <TextView
        android:id="@+id/tracker_text"
        style="@style/TextAppearance.ImGoingOnAnAdventure.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tracker"
        app:layout_constraintEnd_toEndOf="@id/viewToTracker"
        app:layout_constraintStart_toStartOf="@id/viewToTracker"
        app:layout_constraintTop_toBottomOf="@id/viewToTracker" />

    <View
        android:id="@+id/viewToNotes"
        android:layout_width="46dp"
        android:layout_height="60dp"
        android:layout_margin="20dp"
        android:background="@drawable/note"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline_grass" />

    <View
        android:id="@+id/viewToTracker"
        android:layout_width="60dp"
        android:layout_height="41dp"
        android:layout_margin="20dp"
        android:background="@drawable/hike"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline_grass" />

    <TextView
        android:id="@+id/trackerTitle"
        style="@style/TextAppearance.ImGoingOnAnAdventure.Body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/lateef_semibold"
        android:gravity="center"
        android:padding="10dp"
        android:shadowColor="@color/white"
        android:shadowDx="0.0"
        android:shadowDy="0.0"
        android:shadowRadius="10.0"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="@id/top_line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/top_line"
        app:strokeColor="@color/white"
        app:strokeThickness="4dp" />

    <TextView
        android:id="@+id/trackerSubtitle"
        style="@style/TextAppearance.ImGoingOnAnAdventure.Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="10dp"
        android:gravity="center"
        android:padding="10dp"
        android:shadowColor="@color/white"
        android:shadowDx="0.0"
        android:shadowDy="0.0"
        android:shadowRadius="10.0"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/bottom_line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_line" />

</androidx.constraintlayout.widget.ConstraintLayout>
